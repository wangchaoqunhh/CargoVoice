<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv_multi_head"
    android:layout_width="match_parent"
    android:layout_height="136dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:background="@drawable/shape_arc_c100_4dp"
    android:elevation="2dp">


    <EditText
        android:id="@+id/et_dialog_input_text"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:background="@null"
        android:singleLine="true"
        android:textColor="#cc000000"
        android:hint="请输入昵称"
        android:textColorHint="#33000000"
        android:textSize="18sp" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_dialog_input_text"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="#cc000000" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@id/view_line"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tv_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:text="确定"
            android:textColor="#FF33C37D"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/tv_dialog_ok"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:text="取消"
            android:textColor="#DE000000"
            android:textSize="14sp" />

    </RelativeLayout>
</RelativeLayout>