                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/svg_ic_copy_18" />

            </RelativeLayout>

            <LinearLayout
