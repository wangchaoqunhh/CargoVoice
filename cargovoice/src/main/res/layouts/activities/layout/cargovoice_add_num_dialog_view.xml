<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:background="@drawable/cargovoice_shape_r12dp_c128"
    android:elevation="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/quantity"
        android:textColor="@color/c101"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:background="@null"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="7"
        android:paddingTop="48dp"
        android:paddingBottom="30dp"
        android:text="1"
        android:textColor="@color/c101"
        android:textSize="24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_num"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="64dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/tv_ok"
            android:background="@drawable/cargovoice_click_result"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/c101"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="64dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/cargovoice_click_result"
            android:gravity="center"
            android:text="@string/determine"
            android:textColor="@color/c005"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>
