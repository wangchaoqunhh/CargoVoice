<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_goods_inf1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c100"
    android:paddingStart="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <ImageView
        android:padding="8dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/cargovoice_shape_circle_c127"
        android:src="@drawable/svg_ic_map_pin_c005" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="货件类别"
            android:textColor="@color/c101"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_location_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="少时诵诗书"
            android:textColor="@color/c101"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>
