<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/cargovoice_shape_r12dp_c126"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!--单号-->
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:alpha="0.6"
            android:text=""
            android:textColor="@color/c101"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="17dp"
            android:layout_centerInParent="true"
            android:background="@drawable/cargovoice_dotted_vertical"
            android:layerType="software" />

        <!--时间-->
        <TextView
            android:id="@+id/tv_transactionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:alpha="0.6"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/c101"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.2"
        android:background="@color/c101" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:text="账单金额(CNY)"
                android:textColor="@color/c101"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_osTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text=""
                android:textColor="@color/c101"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:alpha="0.6"
                android:text="未结金额(CNY)"
                android:textColor="@color/c101"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_outstandingAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="12dp"
                android:text=""
                android:textColor="@color/c101"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>

    <com.lwb.cargovoice.view.BillListView
        android:id="@+id/blv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!--单号-->
        <TextView
            android:id="@+id/tv_jobKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:text=""
            android:textColor="@color/c101"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>