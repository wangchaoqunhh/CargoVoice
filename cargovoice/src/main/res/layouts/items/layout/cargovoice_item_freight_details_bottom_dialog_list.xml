<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--运输信息-->
    <LinearLayout
        android:id="@+id/parent_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <LinearLayout
                android:layout_width="92dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:background="@drawable/cargovoice_shape_r18dp_c005"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_plane_or_ship"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:src="@drawable/svg_ic_plane_white" />

                <TextView
                    android:id="@+id/tv_plane_or_ship"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text=""
                    android:textColor="@color/c101"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_ships_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:textColor="@color/c101" />

            <TextView
                android:id="@+id/tv_voyage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text=""
                android:textColor="@color/c101" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="20dp"
                    android:src="@drawable/svg_ic_map_pin_1" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/cargovoice_dotted_vertical"
                    android:layerType="software" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="13dp"
                    android:src="@drawable/svg_ic_map_pin_2" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.6"
                        android:text="实际出发"
                        android:textColor="@color/c101"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_depart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textColor="@color/c101"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.6"
                        android:text="实际到达"
                        android:textColor="@color/c101"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_arrive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textColor="@color/c101"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text=""
                android:textColor="@color/c101"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/c101"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>
    <!--里程碑-->
    <LinearLayout
        android:id="@+id/parent_2"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/view_line_top"
                android:layout_width="2dp"
                android:layout_height="16dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/cargovoice_dotted_vertical"
                android:layerType="software" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:src="@drawable/svg_ic_icon" />

            <View
                android:id="@+id/view_line_down"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/cargovoice_dotted_vertical"
                android:layerType="software" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/tv_arrive_harbor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXXXXXX"
                android:textColor="@color/c101"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_predict_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:alpha="0.6"
                android:text="XXXXXXXXX"
                android:textColor="@color/c101"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_practical_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:alpha="0.6"
                android:text="XXXXXXXXX"
                android:textColor="@color/c101"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
    <!--货件/物品-->
    <RelativeLayout
        android:id="@+id/parent_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cargovoice_shape_circle_c127"
            android:padding="8dp"
            android:src="@drawable/svg_ic_box" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_container_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:text="XXXX"
                android:textColor="@color/c101"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_goods_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="ZXXXX"
                android:textColor="@color/c101"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp">

                <TextView
                    android:id="@+id/tv_packaging_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.6"
                    android:text="ZXXXX"
                    android:textColor="@color/c101"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tv_tv_packaging_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:alpha="0.6"
                    android:text="ZXXXX"
                    android:textColor="@color/c101"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <!--订单-->
    <RelativeLayout
        android:id="@+id/parent_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cargovoice_shape_circle_c127"
            android:padding="8dp"
            android:src="@drawable/svg_ic_clipboard" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_order_number1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.6"
                    android:text="单号："
                    android:textColor="@color/c101"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_order_number1"
                    android:text="ZXXXX"
                    android:textColor="@color/c101"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_order_stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="24dp"
                    android:text="ZXXXX"
                    android:textColor="@color/c101"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.6"
                    android:text="日期："
                    android:textColor="@color/c101"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ZXXXX"
                    android:textColor="@color/c101"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <!--集装箱-->
    <RelativeLayout
        android:id="@+id/parent_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cargovoice_shape_circle_c127"
            android:padding="8dp"
            android:src="@drawable/svg_ic_box" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_container_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="100dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/c101"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_tv_container_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="24dp"
                    android:alpha="0.6"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/c101"
                    android:textSize="14sp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:alpha="0.6"
                android:text=""
                android:textColor="@color/c101"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:alpha="0.6"
                android:text=""
                android:textColor="@color/c101"
                android:textSize="12sp" />


        </LinearLayout>
    </RelativeLayout>
    <!--参考号-->
    <RelativeLayout
        android:id="@+id/parent_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cargovoice_shape_circle_c127"
            android:padding="8dp"
            android:src="@drawable/svg_ic_clipboard" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.6"
                    android:text="类型："
                    android:textColor="@color/c101"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_type3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_type2"
                    android:text="ZXXXX"
                    android:textColor="@color/c101"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_code3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="24dp"
                    android:alpha="0.6"
                    android:text="ZXXXX"
                    android:textColor="@color/c101"
                    android:textSize="12sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_explain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:alpha="0.6"
                    android:text="说明："
                    android:textColor="@color/c101"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_code4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="ZXXXX"
                    android:textColor="@color/c101"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <!--备注-->
    <RelativeLayout
        android:id="@+id/parent_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cargovoice_shape_circle_c127"
            android:padding="8dp"
            android:src="@drawable/svg_ic_notes" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZXXXX"
                android:textColor="@color/c101"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_remark_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14sp"
                android:text="ZXXXXZXXXXZXXXXZXXXXZXXXXZXXXXZXXXXZXXXXZXXXXZXXXXZXXXXZXXXXZXXXXZXXXX"
                android:textColor="@color/c101"
                android:textSize="14sp" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>