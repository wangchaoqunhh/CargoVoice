<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/cargovoice_click_r0dp_c0"
    android:gravity="center_vertical"
    tools:context=".module.mvp.ui.activity.GoodsTypeActivity">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/cargovoice_shape_circle_c127"
        android:padding="8dp"
        android:src="@drawable/svg_ic_bookmark" />

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text=""
        android:textColor="@color/c101"
        android:textSize="16sp" />
</LinearLayout>