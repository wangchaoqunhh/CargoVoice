<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/cargovoice_click_r8dp_c128"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:src="@drawable/svg_ic_undraw_folder_39kl" />

        <com.lwb.cargovoice.view.ProgressBarView
            android:id="@+id/pbv"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="32dp" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_horizontal"
            android:text="@string/submitting_for_you_please_wait_patiently"
            android:textColor="@color/c101"
            android:textSize="14dp" />
    </LinearLayout>
</RelativeLayout>
