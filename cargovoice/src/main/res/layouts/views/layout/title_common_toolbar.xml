<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_common_toolbar"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@color/c100">

    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:background="@drawable/cargovoice_click_r30dp_c100">

        <ImageView
            android:id="@+id/iv_common_toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/svg_back_left" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_common_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="21dp"
        android:text=""
        android:textColor="@color/c101"
        android:textSize="20sp" />

</LinearLayout>