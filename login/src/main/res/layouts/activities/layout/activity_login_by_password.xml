<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.mvp.ui.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/drawable_xxxhdpi_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="132dp"
            android:gravity="center"
            android:text="@string/welcome"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="CargoVoice"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/shape_rectangle_r12_c100_24">

            <ImageView
                android:id="@+id/iv_triangle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/svg_mobile_login" />

            <EditText
                android:id="@+id/et_tel"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="12dp"
                android:layout_toRightOf="@id/iv_triangle"
                android:background="@null"
                android:hint="@string/telephone"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="#FFFFFFFF"
                android:textColorHint="@color/c100_60"
                android:textSize="16sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/shape_rectangle_r12_c100_24">

            <ImageView
                android:id="@+id/iv_verification"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/svg_shield_check_login" />

            <EditText
                android:id="@+id/et_verification"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="12dp"
                android:layout_toRightOf="@id/iv_verification"
                android:background="@null"
                android:hint="@string/verification"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="#FFFFFFFF"
                android:textColorHint="@color/c100_60"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:text="@string/get_verification"
                android:textColor="@color/c101"
                android:textSize="14sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_agree"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/iv_agree"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="6dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/svg_ic_circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:text="@string/read_and_agree"
                android:textColor="@color/c100_60"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/user_service_agreement"
                android:textColor="@color/c101"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="32dp"
            android:background="@drawable/shape_rectangle_r12_c14e"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/c100_60"
            android:textSize="16sp" />

    </LinearLayout>



    <View
        android:layout_width="308dp"
        android:layout_height="308dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-154dp"
        android:layout_marginRight="-154dp"
        android:background="@drawable/shape_rectangle_r154_c005" />

    <View
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-16dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/shape_rectangle_r36_c124" />

    <LinearLayout
        android:id="@+id/ll_language"
        android:layout_width="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="36dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="38dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/svg_world_language" />

        <TextView
            android:id="@+id/tv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/c101"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp"
        android:text="POWERED BY"
        android:textColor="@color/c100_60"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="ENO"
        android:textColor="@color/c100_60"
        android:textSize="34sp" />
</RelativeLayout>