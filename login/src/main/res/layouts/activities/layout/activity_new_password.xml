<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".module.mvp.ui.activity.NewPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_arrow_back"
            android:padding="6dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="设置密码"
        android:textColor="#cc000000"
        android:textSize="28sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="必须是6~18位的数字、字符组合（不能是纯数字）"
        android:textColor="#99000000"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="26dp">

        <TextView
            android:id="@+id/tv_password_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="新密码"
            android:textColor="#CC000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_password_new"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="116dp"
            android:layout_toRightOf="@id/tv_password_new"
            android:background="@null"
            android:hint="请设置新密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="#cc000000"
            android:maxLength="18"
            android:textColorHint="#33000000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_show_new"
            android:layout_width="36dp"
            android:src="@drawable/ic_visibility_off"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="6dp" />

        <ImageView
            android:id="@+id/iv_delete_new"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/iv_show_new"
            android:src="@drawable/ic_clear"
            android:padding="6dp"
            android:visibility="gone" />

        <View
            android:id="@+id/view_line_new"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="6dp"
            android:background="#14000000" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="26dp">

        <TextView
            android:id="@+id/tv_password_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="新密码"
            android:textColor="#CC000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_password_again"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="116dp"
            android:layout_toRightOf="@id/tv_password_again"
            android:background="@null"
            android:hint="请确认新密码"
            android:maxLength="18"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="#cc000000"
            android:textColorHint="#33000000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_show_again"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_visibility_off"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="6dp" />

        <ImageView
            android:id="@+id/iv_delete_again"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/iv_show_again"
            android:src="@drawable/ic_clear"
            android:padding="6dp"
            android:visibility="gone" />

        <View
            android:id="@+id/view_line_again"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="6dp"
            android:background="#14000000" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/shape_first_grey"
        android:gravity="center"
        android:text="完成"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</LinearLayout>


