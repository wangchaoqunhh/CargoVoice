<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_rectangle_r12_c100">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/cancel_account"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="56dp"
        android:layout_height="30dp"
        android:textColor="@color/c005"
        android:textSize="14sp"
        android:text="@string/determine"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/shape_rectangle_r6_c100"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_toLeftOf="@id/tv_ok"
        android:layout_width="56dp"
        android:layout_height="30dp"
        android:textColor="@color/c100_60"
        android:textSize="14sp"
        android:text="@string/cancel"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/shape_rectangle_r6_c100"/>


</RelativeLayout>